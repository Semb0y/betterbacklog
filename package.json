{
  "name": "jira-backlog-action-custom-ui",
  "version": "1.0.16",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@forge/api": "^6.4.2",
    "@forge/bridge": "^3.0.0",
    "@forge/resolver": "^1.7.1"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,yml,yaml}\"",
    "format:frontend": "cd static/frontend && npm run format",
    "lint": "forge lint",
    "dev": "npx concurrently \"cd static/frontend && npm start\" \"forge tunnel\"",
    "build-front": "cd static/frontend && npm run build",
    "deploy": "npm run build-front && forge deploy",
    "prompt-update-dev": "forge variables set SYSTEM_PROMPT --environment development \"$(cat prompt.txt)\""
  }
}
